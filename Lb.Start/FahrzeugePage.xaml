<Page x:Class="Lb.Start.FahrzeugePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lb.Start"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FahrzeugePage">

    <Grid>
        <Grid Grid.ColumnSpan="3" Grid.Row="1">
            <ListView Name="lsvFahrzeuge">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Path=ID}"/>
                        <GridViewColumn Header="Typ" Width="500" DisplayMemberBinding="{Binding Path=Typ}"/>
                        <GridViewColumn Header="Kennzeichen" Width="500" DisplayMemberBinding="{Binding Path=Kennzeichen}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
